block template-variables
  - var page = {title: "ZDW 2017", description: "Zlin Design Week 2017."}
  - var theme = "default"

doctype
html.no-js(lang="en")
  head
    block template-head
      meta(charset="utf-8")
      meta(http-equiv="X-UA-Compatible", content="ie=edge")
      title!= page.title
      meta(name="description", content=page.description)
      meta(name="author", content="Christian Jánský")
      meta(name="viewport", content="width=device-width, initial-scale=1, minimal-ui")

      link(rel="apple-touch-icon", sizes="180x180", href="/apple-touch-icon.png")
      link(rel="icon", type="image/png", href="/favicon-32x32.png", sizes="32x32")
      link(rel="icon", type="image/png", href="/favicon-16x16.png", sizes="16x16")

      link(href="https://fonts.googleapis.com/css?family=Work+Sans:400,500,600,700|Space+Mono:400,700&amp;subset=latin-ext", rel="stylesheet")

      <!-- build:css assets/css/style-min.css -->
      <!-- site:css -->
      <!-- endinject -->
      <!-- endbuild -->

  body(class="theme--" + theme)
    include ../_mixins/_dummy
    include ../_mixins/_hud
    include ../_mixins/_intro
    include ../_mixins/_prizes
    include ../_mixins/_apply-form
    include ../_mixins/_mail
    include ../_mixins/_crossroad
    include ../_mixins/_stats
    include ../_mixins/_supporters
    include ../_mixins/_foot
    include ../_mixins/_peek
    include ../_mixins/_tickets
    include ../_mixins/_media-item
    include ../_mixins/_brick

    block template-body

    block template-content
      p Basic template.

    block template-foot
      script(src="http://code.jquery.com/jquery-latest.min.js")
      script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC1t2mSz5UOZY653C6STMlcEe_BNl3EEqA&callback=initMap", async, defer)

      <!-- build:js assets/js/site-min.js -->
      <!-- site:js -->
      <!-- endinject -->
      <!-- endbuild -->
