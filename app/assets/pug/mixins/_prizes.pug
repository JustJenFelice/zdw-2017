mixin prizes
  section.m-prizes.o-section--light
    .l-wrap
      h2.t-head--c Co je ve hře?
      .m-prizes__container
        .m-prizes__block
          .m-prizes__main
            span.m-prizes__fern--left: include ../../svg/shape_fern_left.svg
            h3.m-prizes__caps.t-caps Hlavní cena
            strong.m-prizes__note 4 000 € + stáž k tomu
            span.m-prizes__fern--right: include ../../svg/shape_fern_right.svg
        .m-prizes__block
          ol.m-prizes__list
            li.m-prizes__item 1000 €<br>+ stáž
            li.m-prizes__item 300 €
            li.m-prizes__item 200 €
      a.o-section__button.o-button--solid(href="javascript:") Všechny ceny
