block template-variables
  - var page = {title: "ZDW 2017", description: "Zlín Design Week 2017."}

doctype
html.no-js(lang="en")
  head
    block template-head
      meta(charset="utf-8")
      meta(http-equiv="X-UA-Compatible", content="ie=edge")
      title!= page.title
      meta(name="description", content=page.description)
      meta(name="author", content="Christian Jánský")
      meta(name="viewport", content="width=device-width, initial-scale=1, minimal-ui")

      link(href="https://fonts.googleapis.com/css?family=Work+Sans:400,500,600,700|Space+Mono:400,700&amp;subset=latin-ext", rel="stylesheet")

      <!-- build:css assets/css/style-min.css -->
      <!-- site:css -->
      <!-- endinject -->
      <!-- endbuild -->

  body
    include ../mixins/_dummy
    include ../mixins/_hud
    include ../mixins/_intro
    include ../mixins/_prizes
    include ../mixins/_short-history
    include ../mixins/_apply-form
    include ../mixins/_crossroad
    include ../mixins/_supporters
    include ../mixins/_foot

    block template-body

    block template-content
      p Basic template.

    block template-foot
      script(src="http://code.jquery.com/jquery-latest.min.js")

      <!-- build:js assets/js/site-min.js -->
      <!-- site:js -->
      <!-- endinject -->
      <!-- endbuild -->
