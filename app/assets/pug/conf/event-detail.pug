extends ../_templates/_site

block template-content
  +hud("zdw")

  section.m-hero--half
    .m-hero__content
      h1.m-hero__title Otto Fabri
      span Designér ve Faraday Future

  .o-facts
    .o-facts__wrap
      ul.o-facts__list
        -
          var eventInfo = [
            {
              "title": "Datum konání",
              "content": "26. 5. 2016"
            },
            {
              "title": "Čas",
              "content": "19:00 – 02:00"
            },
            {
              "title": "Místo",
              "content": "Platforma 14|15"
            },
            {
              "title": "Kategorie",
              "content": "Party"
            }
          ]
        each item in eventInfo
          li.o-facts__item
            strong.o-facts__title= item.title
            | 
            span.o-facts__content= item.content

  main
    .l-wrap
      .m-event
        .m-event__main
          p Výkop Zlin Design Weeku obstará opening konaný na platformě mezi 14. a 15. budovou. Kromě slavnostního zahájení, proslovů a dalších oficialit dojde na bohatý doprovodný program. Hlavními taháky jsou Fashion Show ateliéru Design oděvu, během které bude představena nová kolekce UTB, či videomapping. Večer zpříjemní také DJ, stánky s občerstvením a nápoji včetně Jägermeisteru.

        .m-event__aside
          .o-map--small
            .o-map__viewport
              include ../_partials/_google-maps.html
          h3 Otto Fabri
          ul
            li: a(href="javascript:") www.google.com
            li: a(href="javascript:") www.seznam.cz

      .m-related
        h4.m-related__title Další řečníci
        .m-related__list
          each item, index in [1, 2, 3, 4]
            a.m-related__item.o-person(href="event-detail.html")
              .o-person__thumbnail
                img.o-person__image(src="http://i.pravatar.cc/600?img=" + index * 10, alt="Portrait")
              .o-person__content
                strong.o-person__name: +dummy(2, "words")
                span.o-person__description: +dummy(5, "words")

  +tickets

  +crossroad("zdw")

  +mail("full")

  +supporters

  +foot("conf")

  +peek("bg_bid_3.jpg", "conf")
