extends _templates/_site

block template-content
  header.o-hud#js-headroom
    .o-hud__head
      a.o-logo--conf(href="index.html"): include ../svg/logo_zdw.svg

    .o-switcher
      button.o-switcher__toggle(data-switcher)
        | Všechny projekty
        svg.o-switcher__icon(viewBox="0 0 16 10", xmlns="http://www.w3.org/2000/svg")
          path(d="M2,2 L8,8 L14,2")
      strong.o-switcher__title Další projekty
      .o-switcher__content
        a.o-switcher__link(href="http://www.zlindesignweek.com") Zlin Design Week
        a.o-switcher__link(href="http://www.bestindesign.cz") Best in Design
        mark.o-switcher__link--active Konference Design &amp; Marketing

  span.o-switcher-close(data-switcher)

  section.m-hero--full(style="background-image: url(/assets/images/bg_conf_1.jpg)")
    .m-hero__content
      h1.m-hero__title Konference Design &amp; Marketing
      p.m-hero__details
        strong.m-hero__date 26. dubna 2017 
        span.m-hero__location Zlín, CZE

  section.m-intro-sticker
    a.o-sticker--solid(href="assets/files/zdw-2017-open-call.pdf")
      h1.o-sticker__title Student Design Wanted!
      span.o-sticker__caps Pro výstavy hledáme designéry

      mark.o-sticker__foot (.pdf)

  main.m-article.o-section--white
    .l-wrap
      .l-table
        .l-table__cell
            h2.t-head--c Připravujeme pro Vás další ročník!
            a.m-article__link.o-anchor(href="https://medium.com/@zlindesignweek/", data-external)
              span.o-anchor__text Náš blog
              svg.o-anchor__icon(width="12px", viewBox="0 0 12 12", xmlns="http://www.w3.org/2000/svg")
                path(d="M0.5,0.5 L11.5,0.5 L11.5,11.5")
                path(d="M0.5,11.5 L11.5,0.5")

        .l-table__cell
          p Propojení těchto dvou světů, spousta inspirace, řečníci ze světa designu i&nbsp;marketingu z&nbsp;Česka i&nbsp;zahraničí, kteří mají opravdu co říct a&nbsp;skvělá přiležitost rozšířit si obzory, navázat kontakty nebo poznat nové lidi&hellip; To všechno ve středu 26.&nbsp;dubna 2017 na Konferenci Design &amp; Marketing ve Zlíně!

  section.o-brick--black
    .o-brick__image(style="background-image: url(/assets/images/history_conf.jpg)")

    .o-brick__content
      .o-brick__top
        h2.t-head--b Jaký byl minulý ročník?
        .o-brick__text
          p.t-text--big Pokud se chcete naladit už teď, pusťte si sestřih z minulého ročníku.
      .o-brick__bottom
        a.o-button--outline(href="https://www.youtube.com/embed/xlQKuP_RgI4", data-featherlight="iframe") Přehrát video

  section.m-xroad(style="background-image: url(/assets/images/bg_conf_2.jpg)")
    a.m-xroad__link(href="http://www.zlindesignweek.com")
      span.m-xroad__arrow--left &larr; 
      | Zlin Design Week
    a.m-xroad__link(href="http://www.bestindesign.cz")
      | Best in Design
      span.m-xroad__arrow--right  &rarr;

  +mail

  +supporters("temp")

  footer.o-foot
    .l-wrap
      .o-foot__logo: include ../svg/logo_zdw.svg
      .o-foot__table
        .o-foot__cell
          h4.o-foot__head.t-smallcaps O projektu
          p ZLIN DESIGN WEEK je projekt realizovaný studenty Fakulty multimediálních komunikací Univerzity Tomáše Bati ve Zlíně.
          p 24–30. dubna 2017; Zlín, Česká republika

        .o-foot__cell
          h4.o-foot__head.t-smallcaps Odkazy
          ul.o-foot__list--nobreak
            each link, title in {"Best in Design": "http://www.bestindesign.cz", "Konference D&thinsp;&amp;&thinsp;M": "http://www.zlindesignweek.com/konference/", "Design v Ulicích": "http://www.zlindesignweek.com/week/"}
              li.o-foot__li: a(href=link)!= title

        .o-foot__cell
          h4.o-foot__head.t-smallcaps Kontakt
          ul.o-foot__list
            li.o-foot__li Aneta Oulehlová
            li.o-foot__li: a(href="mailto:aneta.oulehlova@zlindesignweek.com") aneta.oulehlova@zlindesignweek.com
            li.o-foot__li +420 736 222 423

  +peek("bg_conf_3.jpg", "conf")
