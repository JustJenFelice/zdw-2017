{
  "dev": {
    "root": "app/",

    "resources": "gulp/resources.json",

    "pagesFormat": ".html",
    "pagesRoot": "app/assets/html",
    "pagesGlob": "app/assets/html/**/*.html",
    "pagesIgnore": "**/[^_]*.html",

    "pugRoot": "app/assets/pug/",
    "pugGlob": "app/assets/pug/**/*.pug",

    "jsonGlob": "app/assets/data/*.json",
    "jsonShared": "app/assets/data/global.json",

    "scssRoot": "app/assets/scss/",
    "scssBase": "app/assets/scss/!(_)*.scss",
    "scssGlob": "app/assets/scss/**/*.scss",

    "cssRoot": "app/assets/css/",

    "jsGlob": "app/assets/js/**/*.js",

    "imagesGlob": "app/assets/images/**/*",
    "imagesIgnore": "!app/assets/images/_ignore{,/**}",

    "svgSourceGlob": "app/assets/svg/_source/*.svg",
    "svgBuildGlob": "app/assets/svg/*.svg",
    "svgBuild": "app/assets/svg/"
  },
  "dist": {
    "root": "dist/"
  }
}
